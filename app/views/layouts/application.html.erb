    <%= javascript_include_tag "application", "data-turbo-track": "reload", type: "module" %>

    <%= javascript_include_tag %>
  </head>
  <body>
    <header>
  <span>
    <a class="logoLink" href=<%= root_path %>>
      <img src="/assets/logo.png" alt="The Gossip Project" height="40", width="auto">The Gossip Project
    </a>
  </span>

  <span style="float:right;">
    <%= link_to "Home Page", root_path, class: "navButton" %>
    <%= link_to "Team", team_path, class: "navButton" %>
    <%= link_to "Contact", new_contact_path, class: "navButton" %>
    <% if session[:user_id] %>
  <%= button_to "DÃ©connexion", session_path(session[:user_id]), method: :delete %>
<% else %>
  <%= link_to "Connexion", new_session_path %>
<% end %>
  </span>
</header>
<% if flash[:notice] %>
  <div class="alert alert-success"><%= flash[:notice] %></div>
<% elsif flash[:alert] %>
  <div class="alert alert-danger"><%= flash[:alert] %></div>
<% end %>
    <%= yield %>
  </body>
</html>
